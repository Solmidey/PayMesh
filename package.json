{
  "name": "paymesh",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "build": "pnpm -r --if-present run build",
    "typecheck": "pnpm -r --if-present run typecheck",
    "test": "pnpm -r --if-present test",
    "lint": "pnpm -r --if-present lint",
    "dev:providers": "concurrently -n research,framegen -c auto,auto \"pnpm --filter @paymesh/research-mcp start\" \"pnpm --filter @paymesh/framegen-mcp start\"",
    "dev:orchestrator": "pnpm --filter @paymesh/buyer-orchestrator start",
    "demo:happy": "pnpm dev:providers & sleep 2 && pnpm dev:orchestrator",
    "deploy:base-sepolia": "forge script packages/contracts/script/Deploy.s.sol --rpc-url \"$RPC_URL\" --private-key \"$PRIVKEY\" --broadcast",
    "addrs:write": "tsx tools/scripts/write-addresses.ts",
    "dev:cf": "wrangler dev",
    "deploy:cf": "wrangler deploy"
  },
  "devDependencies": {
    "@nullshot/cli": "^0.2.5",
    "@types/body-parser": "^1.19.6",
    "@types/express": "^5.0.5",
    "@types/node": "^20.11.30",
    "concurrently": "^9.0.0",
    "eslint": "8.57.0",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "express": "^4.21.2"
  },
  "pnpm": {
    "overrides": {
      "eslint": "8.57.0"
    }
  }
}
